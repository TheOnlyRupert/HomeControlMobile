<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="HomeControlMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:modules="clr-namespace:HomeControlMobile.Source.Modules"
    FlyoutBehavior="Flyout"
    Title="HomeControl Mobile">

    <FlyoutItem Title="Calendar" Icon="calendar_icon.png">
        <ShellContent ContentTemplate="{DataTemplate modules:CalendarPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Settings" Icon="settings_icon.png">
        <ShellContent ContentTemplate="{DataTemplate modules:SettingsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Behavior" Icon="behavior_icon.png">
        <ShellContent ContentTemplate="{DataTemplate modules:BehaviorPage}" />
    </FlyoutItem>
</Shell>