<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HomeControlMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HomeControlMobile"
    xmlns:source="clr-namespace:HomeControlMobile.Source"
    xmlns:modules="clr-namespace:HomeControlMobile.Source.Modules"
    FlyoutBehavior="Flyout"
    Title="HomeControlMobile">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <FlyoutItem Title="Settings" Icon="settings_icon.png">
        <ShellContent ContentTemplate="{DataTemplate modules:SettingsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Behavior" Icon="behavior_icon.png">
        <ShellContent ContentTemplate="{DataTemplate modules:BehaviorPage}" />
    </FlyoutItem>
    
</Shell>
